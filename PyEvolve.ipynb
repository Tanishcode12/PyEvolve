import numpy as np
import time
import matplotlib.pyplot as plt
from matplotlib.animation import FuncAnimation
from IPython.display import HTML, display
import ipywidgets as widgets
from numba import njit, prange
from typing import Tuple

# --- GPU ACCELERATION IMPORTS ---
try:
    import cupy as cp
    from cupyx.scipy.signal import convolve2d
    HAS_GPU = True
except ImportError:
    HAS_GPU = False

# --- CPU KERNEL (NUMBA) ---
@njit(parallel=True, fastmath=True)
def compute_cpu(grid: np.ndarray, birth: np.ndarray, survive: np.ndarray) -> np.ndarray:
    rows, cols = grid.shape
    new_grid = np.zeros_like(grid)
    for r in prange(rows):
        for c in range(cols):
            neighbors = 0
            for dr in range(-1, 2):
                for dc in range(-1, 2):
                    if dr == 0 and dc == 0: continue
                    nr, nc = (r + dr) % rows, (c + dc) % cols
                    neighbors += grid[nr, nc]
            
            # Transition Logic
            is_alive = grid[r, c] == 1
            if not is_alive:
                for b in birth:
                    if neighbors == b:
                        new_grid[r, c] = 1
                        break
            else:
                for s in survive:
                    if neighbors == s:
                        new_grid[r, c] = 1
                        break
    return new_grid

# --- GPU KERNEL (CUPY + CONVOLUTION) ---
def compute_gpu(grid: np.ndarray, birth: np.ndarray, survive: np.ndarray) -> np.ndarray:
    """Uses 2D Convolution to sum neighbors instantly on the GPU."""
    g_grid = cp.asarray(grid)
    # Weights for Moore neighborhood
    kernel = cp.array([[1, 1, 1],
                       [1, 0, 1],
                       [1, 1, 1]], dtype=cp.uint8)
    
    # Calculate neighbors for all cells at once
    neighbors = convolve2d(g_grid, kernel, mode='same', boundary='wrap')
    
    # Parallel Logical Rules
    new_grid = cp.zeros_like(g_grid)
    
    # Birth: Dead cells with N neighbors
    birth_mask = cp.zeros_like(g_grid, dtype=bool)
    for b in birth:
        birth_mask |= (neighbors == b)
    new_grid[(g_grid == 0) & birth_mask] = 1
    
    # Survival: Living cells with N neighbors
    survive_mask = cp.zeros_like(g_grid, dtype=bool)
    for s in survive:
        survive_mask |= (neighbors == s)
    new_grid[(g_grid == 1) & survive_mask] = 1
    
    return cp.asnumpy(new_grid)

# --- THE ARCHITECTURE ---
class LifeArchitect:
    def __init__(self, size: int = 100, rules: str = "B3/S23", mode: str = 'cpu'):
        self.size = size
        self.mode = 'gpu' if (mode == 'gpu' and HAS_GPU) else 'cpu'
        self.grid = np.random.choice([0, 1], size*size, p=[0.8, 0.2]).reshape(size, size).astype(np.uint8)
        self.birth, self.survive = self._parse_rule_string(rules)
        
    def _parse_rule_string(self, rule_str: str) -> Tuple[np.ndarray, np.ndarray]:
        try:
            b_part, s_part = rule_str.upper().split('/')
            b = np.array([int(d) for d in b_part if d.isdigit()], dtype=np.uint8)
            s = np.array([int(d) for d in s_part if d.isdigit()], dtype=np.uint8)
            return b, s
        except:
            return np.array([3], dtype=np.uint8), np.array([2, 3], dtype=np.uint8)

    def evolve(self):
        if self.mode == 'gpu':
            self.grid = compute_gpu(self.grid, self.birth, self.survive)
        else:
            self.grid = compute_cpu(self.grid, self.birth, self.survive)
        return self.grid

# --- THE JUPYTERLAB INTERFACE ---
class PyEvolve:
    def __init__(self):
        self.engine = None
        # UI
        self.rule_input = widgets.Text(value="B3/S23", description="Rules:")
        self.res_slider = widgets.IntSlider(value=200, min=50, max=1000, step=50, description="Res:")
        self.mode_dropdown = widgets.Dropdown(options=['cpu', 'gpu'], value='gpu' if HAS_GPU else 'cpu', description='Backend:')
        self.run_btn = widgets.Button(description="Run Simulation", button_style='success', icon='bolt')
        self.out = widgets.Output()
        
        display(widgets.VBox([widgets.HTML("<h2>Pro GPU Life Engine</h2>"), 
                              self.rule_input, self.res_slider, self.mode_dropdown, self.run_btn]), self.out)
        self.run_btn.on_click(self.start_sim)

    def start_sim(self, _):
        with self.out:
            self.out.clear_output(wait=True)
            if self.mode_dropdown.value == 'gpu' and not HAS_GPU:
                print("‚ùå CuPy not found. Using CPU.")
                self.mode_dropdown.value = 'cpu'

            self.engine = LifeArchitect(size=self.res_slider.value, rules=self.rule_input.value, mode=self.mode_dropdown.value)
            
            # Benchmark
            t0 = time.time()
            for _ in range(10): self.engine.evolve() # Warm up
            t1 = time.time()
            print(f"{self.engine.mode.upper()} Mode: {(t1-t0)/10*1000:.2f}ms/frame at {self.res_slider.value}x{self.res_slider.value}")

            fig, ax = plt.subplots(figsize=(6, 6))
            img = ax.imshow(self.engine.grid, cmap='magma')
            ax.axis('off')

            def update(frame):
                img.set_data(self.engine.evolve())
                return (img,)

            ani = FuncAnimation(fig, update, frames=100, interval=30, blit=True)
            display(HTML(ani.to_jshtml()))
            plt.close(fig)

PyEvolve()
